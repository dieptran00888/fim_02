<% if @albums.any? %>
  <table class="table table-hover">
    <%= link_to "Create Album", new_admin_album_path,
      class: "btn btn-primary" %>
    <thead>
      <tr>
        <th>Created at</th>
        <th><%= t ".name" %></th>
        <th><%= t ".album_option" %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @albums %>
    </tbody>
  </table>
<% end %>
